{{#with movie}}
<h1>Edit "{{title}}"</h1>
<form action="/movies/update/{{_id}}" method="POST">
	<label for="title">Title</label>
	<input type="text" name="title" id="title" value="{{title}}">
	<label for="genre">Genre</label>
	<input type="text" name="genre" id="genre" value="{{genre}}">
    <label for="plot">Plot</label>
	<input type="text" name="plot" id="plot" value="{{plot}}">
	<label for="cast">Cast</label>
{{/with}}
	<select name="cast" size="3" multiple="multiple">
        {{!-- {{#if selected}} --}}
            {{#each celebrities}}
                
		    	<option value="{{_id}}" selected>{{name}}</option>
                
		    {{/each}}
        {{!-- {{#else}}
             {{#each celebrities}}
                
		    	<option value="{{_id}}">{{name}}</option>
                
		    {{/each}}
        {{/else}}
        {{/if}} --}}
	</select>
	<button type="submit">Update this movie</button>
</form>




